{
  "version": "0.2", // CSpell 설정 파일의 버전
  "language": "en", // 기본 언어 설정 (영어)
  "words": [
    // 사용자 정의 단어 목록
    "React",
    "TypeScript",
    "NextJS",
    "MyCustomWord",
    "tailwind",
    "tailwindcss",
    "daisyui"
  ],
  "ignorePaths": [
    // 스펠링 검사를 무시할 파일 및 경로 패턴
    "node_modules/**",
    "build/**",
    "dist/**",
    "**/*.d.ts" // TypeScript 타입 선언 파일 무시
  ],
  "ignoreRegExpList": [
    // 정규 표현식으로 무시할 패턴
    "/^\\s*\\/\\//", // 한 줄 주석 무시
    "/^\\s*\\/\\*.*\\*\\//" // 다중 줄 주석 무시
  ],
  "dictionaryDefinitions": [
    // 추가 사전 정의 (필요한 경우)
    {
      "name": "typescript",
      "path": "./path/to/your/typescript-dictionary.txt"
    }
  ]
}
